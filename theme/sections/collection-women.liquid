<div class="sog-container-wide">
    <header>
      <h1 class="collection-lp__title">{{ collection.title }}</h1>
    </header>
  {%- for block in section.blocks -%}
    <div class="row collection-lp__row">
      {%- if block.type == 'one_column' -%}
        <div class="col-xs-12 collection-lp__col">
          <a href="{{ block.settings.url }}" class="collection-lp__link">
            <picture>
              <source srcset="{{ block.settings.image | img_url: '1680x' }} 1x, {{ block.settings.image | img_url: '1860x', scale: 2 }} 2x" media="(min-width:1600px)">
              <source srcset="{{ block.settings.image | img_url: '1380x' }} 1x, {{ block.settings.image | img_url: '1380x', scale: 2 }} 2x" media="(min-width:1280px)">
              <source srcset="{{ block.settings.image | img_url: '964x' }} 1x, {{ block.settings.image | img_url: '964x', scale: 2 }} 2x" media="(min-width:667px)">
              <img
                src="{{ block.settings.image | img_url: '414x' }}"
                srcset="{{ block.settings.image | img_url: '414x' }} 1x, {{ block.settings.image | img_url: '414x', scale: 2 }} 2x"
                alt=""
                class="img-responsive">
            </picture>
          </a>
        </div>

      {%- elsif block.type == 'two_columns' -%}
        <div class="col-xs-6 collection-lp__col">
          <a href="{{ block.settings.url1 }}" class="collection-lp__link">
