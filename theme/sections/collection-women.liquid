                alt=""
                class="img-responsive">
            </picture>
          </a>
        </div>

      {%- elsif block.type == 'three_columns' -%}
        <div class="col-xs-4 collection-lp__col">
          <a href="{{ block.settings.url1 }}" class="collection-lp__link">
            <picture>
              <source srcset="{{ block.settings.image1 | img_url: '600x' }} 1x, {{ block.settings.image1 | img_url: '600x', scale: 2 }} 2x" media="(min-width:1600px)">
              <source srcset="{{ block.settings.image1 | img_url: '440x' }} 1x, {{ block.settings.image1 | img_url: '440x', scale: 2 }} 2x" media="(min-width:1280px)">
              <source srcset="{{ block.settings.image1 | img_url: '302x' }} 1x, {{ block.settings.image1 | img_url: '302x', scale: 2 }} 2x" media="(min-width:768px)">
              <img
                src="{{ block.settings.image1 | img_url: '414x' }}"
                srcset="{{ block.settings.image1 | img_url: '414x' }} 1x, {{ block.settings.image1 | img_url: '414x', scale: 2 }} 2x"
                alt=""
                class="img-responsive">
            </picture>
          </a>
        </div>
        <div class="col-xs-4 collection-lp__col">
          <a href="{{ block.settings.url2 }}" class="collection-lp__link">
            <picture>
              <source srcset="{{ block.settings.image2 | img_url: '600x' }} 1x, {{ block.settings.image2 | img_url: '600x', scale: 2 }} 2x" media="(min-width:1600px)">
