              <source srcset="{{ block.settings.image1 | img_url: '467x' }} 1x, {{ block.settings.image1 | img_url: '467x', scale: 2 }} 2x" media="(min-width:768px)">
              <img
                src="{{ block.settings.image1 | img_url: '414x' }}"
                srcset="{{ block.settings.image1 | img_url: '414x' }} 1x, {{ block.settings.image1 | img_url: '414x', scale: 2 }} 2x"
                alt=""
                class="img-responsive">
            </picture>
          </a>
        </div>
        <div class="col-xs-6 collection-lp__col">
          <a href="{{ block.settings.url2 }}" class="collection-lp__link">
            <picture>
              <source srcset="{{ block.settings.image2 | img_url: '915x' }} 1x, {{ block.settings.image2 | img_url: '915x', scale: 2 }} 2x" media="(min-width:1600px)">
              <source srcset="{{ block.settings.image2 | img_url: '675x' }} 1x, {{ block.settings.image2 | img_url: '675x', scale: 2 }} 2x" media="(min-width:1280px)">
