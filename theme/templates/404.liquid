{% layout none %}<!doctype html>
<html lang="en" class="">
<head>

  <!-- Basic page needs ================================================== -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

  <!-- Title and description ================================================== -->
  <title>
  {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <!-- Helpers ================================================== -->
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="theme-color" content="{{ settings.primary_color }}">

  {% if settings.header_font contains 'Google' %}
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family={{ settings.header_font | remove: 'Google+' }}:300,400,700,900">
  {% endif %}
  {% if settings.base_font contains 'Google' and settings.base_font != settings.header_font %}
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family={{ settings.base_font | remove: 'Google+' }}:300,400,700,900">
  {% endif %}

  {% if settings.favicon != empty %}
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png">
  {% endif %}

  <!-- Header hook for plugins ================================================== -->
  {{ content_for_header }}

  <!--[if lt IE 9]>
  {{ '//html5shiv.googlecode.com/svn/trunk/html5.js' | script_tag }}
  <![endif]-->

  {{ 'jquery.min.js' | asset_url | script_tag }}

  <style>
    * {
      box-sizing: border-box;
    }

    html, body {
      min-height: 100%;
    }

    body {
      margin: 0;
      background: #000;
      text-align: left;
      font: bold 12px {{ settings.base_font | remove: 'Google+' | replace: '+', ' ' }}, "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
      color: #838b94;
    }

    a:visited {
      color: #353c40;
      text-decoration: none;
    }

    a:hover {
      color: #d3e7fe;
      text-shadow: #fff 0 0 10px;
    }

    a:active {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
    }

    a {
      outline: none;
      color: #2a3038;
      -webkit-transition-property: color,text-shadow;
      -webkit-transition-duration: 600ms;
      -webkit-transition-timing-function: ease-in-out;
    }

    img {
      max-width: none;
    }

    #parallax {
      position: relative;
      overflow: hidden;
      max-width: 1300px;
      height: 700px;
      margin: 0 auto;
    }

    .parallax-layer {
      position: absolute;
    }

    div.error1 {
      /*position: relative;*/
      width: 1295px;
      height: 695px;
    }

    div.error2 {
      /*position: relative;*/
      width: 1000px;
      height: 625px;
    }

    div.error3 {
      /*position: relative;*/
      padding-left: 400px;
      padding-top: 120px;
      width: 1000px;
      height: 600px;
    }

    div.error4 {
      /*position: relative;*/
      padding-left: 450px;
      padding-top: 160px;
      width: 1150px;
      height: 640px;
    }

    div.error5 {
      /*position: relative;*/
      width: 1270px;
      height: 690px;
    }

    .link {
      text-align: center;
      max-width: 1000px;
      margin: 0 auto;
      color: #bdc0c2;
      font-size: 18px;
      line-height: 26px;
      padding: 10px;
    }

    .link a {
      position: fixed;
      bottom: 25px;
      right: 25px;
      opacity: 0.8;
    }

    .link a:hover {
      opacity: 1;
    }

    .link img {
      max-width: 300px;
    }

    .link h3 {
      font-size: 34px;
      font-weight: bold;
      color: #bdc0c2;
      margin-top: 30px;
    }

    @media (max-width: 1200px) {
      .link a {
        position:relative;
        bottom: auto;
        right: auto;
      }
    }

    @media (max-width: 767px) {
      body {
        background: #000 url("{{ '404-static.jpg' | asset_url }}") no-repeat 50% 0;
        -webkit-background-size: cover;
        background-size: cover;
      }
      #parallax {
        display: none;
      }
      .link {
        position: fixed;
        left: 0;
        right: 0;
        bottom: 0;
        padding: 15px;
      }
      .link h3, .link p {
        margin: 0;
        text-shadow: 0 0 10px #000;
        line-height: 24px;
        color: #fff;
      }
      .link h3 {
        margin-bottom: 6px;
        text-transform: uppercase;
        font-size: 24px;
      }
      .link p {
        font-size: 14px;
        font-weight: normal;
      }
      .link p br {
        display: none;
      }
    }
    @media (max-width: 767px) and (orientation: portrait) {
      body {
        background-position: 70% 0;
      }
    }
  </style>
</head>
<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
  <div style="position:relative;">
    <div id="parallax">
      <div class="parallax-layer error1"><img alt="Mauer" src="{{ 'wand.jpg' | asset_url }}"></div>
      <div class="parallax-layer error2"><img alt="Licht" src="{{ 'licht.png' | asset_url }}"></div>
      <div class="parallax-layer error3"><img alt="Halo1" src="{{ 'halo1.png' | asset_url }}"></div>
      <div class="parallax-layer error4"><img alt="Halo2" src="{{ 'halo2.png' | asset_url}}"></div>
      <div class="parallax-layer error5"><img alt="Batcave 404" src="{{ 'batman-404.png' | asset_url }}"></div>
    </div>
    <div class="link">
      <h3>They can't always be winners.</h3>
      <p>We tried really hard, but couldn't find the page you were looking for.<br>
        You may find what you were looking for on our homepage.</p>
      <a href="/" title="Sons Of Gotham"><img alt="Logo" src="{{ '404_square_logo.png' | asset_url }}"></a>
    </div>
  </div>

  {{ 'jquery.jparallax.min.js' | asset_url | script_tag }}
  <script>
    jQuery(document).ready(function(){
      jQuery('.parallax-layer').parallax({
        mouseport: jQuery("#parallax")
      });
      jQuery('.parallax-layer')
        .trigger({type: "mouseenter", pageX: $(window).width()/2, pageY: $(window).height()/2})
        .trigger({type: "mousemove", pageX: $(window).width()/2, pageY: $(window).height()/2});
    });
  </script>

  {{ content_for_layout }}
</body>
</html>
